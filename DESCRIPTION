Package: ARIA
Type: Package
Title: Tools to Analyze and Update 'Sistec' Datasets
Version: 0.2.0.9012
Authors@R: c(
    person("Samuel", "Macêdo", email = "samuelmacedo@recife.ifpe.edu.br", role = c("aut", "cre")),
